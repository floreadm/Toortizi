	<name>Toortizi</name>
	<description>Angajam ajutor de Turtitor</description>
	<author href="http://behappydigital.com" email="contact@behappydigital.com">Happy Digital</author>

	<icon src="icon-128.png" width="128" height="128" />
	<icon src="icon-256.png" width="256" height="256" gap:role="default" />

	<preference name="permissions" value="none"/>
	<preference name="android-targetSdkVersion" value="19" />

	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	<preference name="target-device" value="handset" />

	<!-- Optional splash screen image, e.g.: -->
	<gap:splash src="splash.png" width="640" height="1136" />

</widget>